<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ADMIN | Funkoshop</title>
    <link rel="icon" href="/img/branding/isotype.svg">
    <link rel="stylesheet" href="../../css/styles.css">

    <!--Google fonts-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter&family=Raleway:wght@300&display=swap" rel="stylesheet">



</head>

<body> 
    <%- include ('../../partials/headerAdmin') %>
    <main class="container">
        <div class="search-section">
            <img class="icon-size" src="../../img/icons/search_icon.svg" alt="">
            <input type="text" placeholder="código, nombre o categoria" size="30">
        </div>
        <% if (mensaje) { %>
            <p  class="texto-alert" role="alert"><%= mensaje %></p>
        <% } %>
        <section class="list-section">
            <h1>LISTADO DE PRODUCTOS</h1>
            <div class="add-section">
                <h2>AGREGAR</h2>
                <a href="/admin/create">
                    <span><iconify-icon class="plus-box" icon="ic:baseline-plus"></iconify-icon></span>
                </a>
                
            </div>
        </section>
        <section class="admin-table">
            <div class="admin-table__header">
                <h3>ID</h3>
                <h3>Código</h3>
                <h3>Nombre del Producto</h3>
                <h3>Categoría</h3>
            </div>
            <% data.forEach(producto => { %> 
                <article class="admin-table__row">
                    <p><%= producto.product_id %></p>
                    <p><%= producto.sku %></p>
                    <p><%= producto.product_name %></p>
                    <p><%= producto.licence_name %></p>
                    <a class="admin-table__btn-edit"  href="/admin/edit/<%= producto.product_id %>"><iconify-icon icon="mdi:pencil" style="color: #1d84b5;"></iconify-icon></a>
                    <form action="/admin/delete/<%= producto.product_id %>" method="POST">
                        <button onclick="return confirm('Esta seguro de eliminar')" class="admin-table__btn-delete" type="submit">
                            <iconify-icon icon="heroicons-solid:trash" style="color: #f33;"></iconify-icon>
                        </button>
                    </form>
                </article> 
            <% }) %>
        </section>
    </main>


    <%- include ('../../partials/footer') %>

    <!--Iconos-->
    <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.8/dist/iconify-icon.min.js"></script>


    <script src="../../js/menu-mobile.js"></script>
</body>