<body> 
    <%- include ('../../partials/headerAdmin') %>
    <main class="container">
        <div class="search-section">
            <img class="icon-size" src="../../img/icons/search_icon.svg" alt="">
            <input type="text" placeholder="código, nombre o categoria" size="30">
        </div>
        <% if (mensaje) { %>
            <p  class="texto-alert" role="alert"><%= mensaje %></p>
        <% } %>
        <section class="list-section">
            <h1>LISTADO DE PRODUCTOS</h1>
            <div class="add-section">
                <h2>AGREGAR</h2>
                <a href="/admin/create">
                    <span><iconify-icon class="plus-box" icon="ic:baseline-plus"></iconify-icon></span>
                </a>
                
            </div>
        </section>
        <section class="table-section">
            <table>
                <tr>
                    <th>ID</th>
                    <th>Código</th>
                    <th>Nombre del Producto</th>
                    <th>Categoria</th>
                </tr>

                <% data.forEach((producto) => { %> 
                    <tr>
                        <td><%= producto.product_id %></td>
                        <td><%= producto.sku %></td>
                        <td><%= producto.product_name %></td>
                        <td><%= producto.licence_name %></td>
                        <div>
                            <td>
                                <a href="/admin/edit/<%= producto.product_id %>">
                                    <img class="icon-size" src="../../img/icons/edit_pencil.svg" alt="">
                                </a>
                            </td>
                            <td>
                                <a href="/admin/delete/<%= producto.product_id %>">
                                    <img class="icon-size" src="../../img/icons/delete_trash.svg" alt="">
                                </a>
                            </td> 
                        </div>
                    </tr>

                <% }) %>
